# Auto detect text files and perform LF normalization
* text=auto

# Python files should always use LF
*.py text eol=lf
*.pyi text eol=lf

# Shell scripts should always use LF
*.sh text eol=lf

# YAML files should always use LF
*.yaml text eol=lf
*.yml text eol=lf

# Markdown files should always use LF
*.md text eol=lf

# JSON files should always use LF
*.json text eol=lf

# TOML files should always use LF
*.toml text eol=lf

# Config files should always use LF
.gitignore text eol=lf
.gitattributes text eol=lf

# Windows batch files should use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
